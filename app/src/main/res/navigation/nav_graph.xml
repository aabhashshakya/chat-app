<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph">
    <fragment
        android:id="@+id/base_fragment"
        android:name="com.avas.firebase_chatapp.VIEW.FRAGMENTS.MAIN.BASE.BaseFragment"
        tools:layout="@layout/fragment_base">
        <action
            android:id="@+id/action_base_fragment_to_messageFragment"
            app:destination="@id/messageFragment" />
        <action
            android:id="@+id/action_base_fragment_to_fullImageViewFragment"
            app:destination="@id/fullImageViewFragment" />
        <action
            android:id="@+id/action_base_fragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.avas.firebase_chatapp.VIEW.FRAGMENTS.AUTHENTICATION.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.avas.firebase_chatapp.VIEW.FRAGMENTS.AUTHENTICATION.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_base_fragment"
            app:destination="@id/base_fragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.avas.firebase_chatapp.VIEW.FRAGMENTS.AUTHENTICATION.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_base_fragment"
            app:destination="@id/base_fragment" />
    </fragment>
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.avas.firebase_chatapp.VIEW.FRAGMENTS.MAIN.BASE.FRAGMENT_IN_VIEWPAGER.MessageFragment"
        tools:layout="@layout/fragment_message">
        <argument
            android:name="receiver_id"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_messageFragment_to_fullImageViewFragment"
            app:destination="@id/fullImageViewFragment" />
        <action
            android:id="@+id/action_messageFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <argument
            android:name="receiverProfilePic"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="receiverName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fullImageViewFragment"
        android:name="com.avas.firebase_chatapp.VIEW.FRAGMENTS.MAIN.BASE.FRAGMENT_IN_VIEWPAGER.FullImageViewFragment"
        android:label="fragment_full_image_view"
        tools:layout="@layout/fragment_full_image_view">
        <argument
            android:name="imageUrl"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.avas.firebase_chatapp.VIEW.FRAGMENTS.MAIN.BASE.FRAGMENT_IN_VIEWPAGER.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="userID"
            app:argType="string" />
        <action
            android:id="@+id/action_profileFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
        <action
            android:id="@+id/action_profileFragment_to_fullImageViewFragment"
            app:destination="@id/fullImageViewFragment" />
    </fragment>
</navigation>