<!-- Since we are using Material Theme as recommend by Android, use Material layouts in layouts. Like use MATERIALCARDVIEW instead
of CARDVIEW. That way we can easily customize their colors from this one theme file -->

<resources>
    <!-- Base application theme. -->
    <style name="Theme.FirebaseChatApp" parent="Theme.MaterialComponents.DayNight">

        <!-- for transparent statusbar -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:colorBackground">@color/white</item>

        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorTertiaryInverse">@color/black</item>


    </style>

    <style name="MyActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">@android:color/transparent</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="MyButtonStyleForAuthScreen" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/not_quite_white</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyEditTextStyleForAuthScreen" parent="Widget.AppCompat.EditText">
        <item name="met_textColor">@color/white</item>
        <item name="met_textColorHint">@color/not_quite_white</item>
        <item name="met_errorColor">@color/not_quite_red</item>
        <item name="met_underlineColor">@color/not_quite_white</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/black</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/not_quite_white</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
    </style>

    <style name="CIVStyle">
        <item name="civ_border_color">@color/not_quite_black</item>
    </style>

    <style name="CardViewBackgroundStyle">
        <item name="cardBackgroundColor">@color/not_quite_grey</item>
    </style>

    <style name="CardViewForegroundStyle">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/black</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyEditTextStyleForAlertDialog" parent="Widget.AppCompat.EditText">

        <item name="met_primaryColor">@color/black</item>
        <item name="met_textColor">@color/black</item>
        <item name="met_textColorHint">@color/not_quite_black</item>
        <item name="met_errorColor">@color/not_quite_red</item>
        <item name="met_underlineColor">@color/black</item>
    </style>

    <style name="fab_style">
        <item name="backgroundTint">@color/white</item>
    </style>


</resources>